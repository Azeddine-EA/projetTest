{% extends 'base.html.twig' %}

{% block title %}
    Acceuil
{% endblock %}

{% block body %}
    <div class='container'>
    
        <h1>POSTS</h1>  

        <div class='container_post' >
                {% for post in posts %}
                <article>
                    <h2>{{ post.title | capitalize }}</h2>
                    <p>
                        {{post.slug}} | {{post.summary}} | {{post.content}}
                    </p>
                    <time>
                        {{post.publishedAt | date('d/m/Y H:i:s' , "Europe/Paris")}}
                    </time>

                    <div>
                        <a href="{{ path('show', { 'id': post.id }) }}"/> Voir le post  </a>
                    </div>
                </article>
                {% endfor %}
        </div>

    </div>
{% endblock %}
