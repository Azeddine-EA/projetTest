{% extends 'base.html.twig' %}

{% block title %}

    Ajouter un Post 

{% endblock %}

{% block body %}
<div class="container">
    <h1>Ajouter un Post</h1>
    <div class="container_form">
        {# form>(div>label{label $}+input)*7 #}
        {{ form_start(form) }}
            {{ form_row(form.title, {label:'Titre' }) }}
            {{ form_row(form.slug, {'attr': {'placeholder': 'Votre slug ici'}}) }}
            {{ form_row(form.summary, {'attr': {'placeholder': 'Votre résumé ici'}}) }}
            {{ form_row(form.content, {'attr': {'placeholder': 'Votre contenu ici'}}) }}
            {# {{ form_row(form.published_at, {'attr': {'placeholder': 'Votre date de publication ici'}}) }} #}
            {# {{ form_row(form.author, {'attr': {'placeholder': 'Votre auteur ici'}}) }} #}
            <button type="submit">Enregistrer</button>
        {{ form_end(form) }}
    </div>
</div>


{% endblock %}